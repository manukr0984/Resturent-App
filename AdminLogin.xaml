<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyMenu.AdminLogin"
             Title="ADMIN LOGIN">
    <ContentPage.Content>
        <StackLayout Padding="10" VerticalOptions="Center">
            <Label VerticalOptions="Center" HorizontalOptions="Center" FontAttributes="Bold">LOGIN AS ADMIN</Label>
            <Label></Label>
            <Label></Label>
            <Label></Label>
            <Entry x:Name="ADMINEmail"
               Placeholder="Email"/>
            <Entry x:Name="Password"
               Placeholder="Password" IsPassword="True"/>
            <Button Text="Login" Clicked="Button_Clicked"
                TextColor="White" BackgroundColor="#1abc9c" FontAttributes="Bold"/>
            <Label></Label>

        </StackLayout>
        </ContentPage.Content>
</ContentPage>