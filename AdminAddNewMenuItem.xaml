<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyMenu.AdminAddNewMenuItem">
    <ContentPage.Content>
        <ScrollView>
            <StackLayout Padding="10">
                <Label/>
                <Picker Title="Select a Menu">
                    <Picker.Items>
                        <x:String>Breakfast</x:String>
                        <x:String>Lunch</x:String>
                        <x:String>Dinner</x:String>
                    </Picker.Items>
                </Picker>
                <Label/>
                <Label Text="Image" />
                <Button Text="Upload Image" HorizontalOptions="Start" TextColor="White" BackgroundColor="#1abc9c" FontAttributes="Bold"></Button>
                <Label Text="Name" />
                <Entry x:Name="Name"
               Placeholder=""/>
                <Label Text="Price" />
                <Entry x:Name="Price"
               Placeholder=""/>
                <Label Text="Description" />
                <Editor HeightRequest="150"
               Text=""/>
                <Button Text="Add Menu Item" Clicked="Button_Clicked"  TextColor="White" BackgroundColor="#1abc9c" FontAttributes="Bold"></Button>

            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>