<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyMenu.AdminAddNewDiscount">

    <ContentPage.Content>
        <StackLayout>
            <Label></Label>
            <Label Text="Discount Offer Description" />
            <Entry x:Name="Offer"
               Placeholder="Offer Description"/>
            <Label></Label>
            <Button Clicked="Button_Clicked" Text="Add Discount Offer" TextColor="White" BackgroundColor="#1abc9c" FontAttributes="Bold" HorizontalOptions="Center"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>